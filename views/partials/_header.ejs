<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>

    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(username){ %>
          <a class="nav-item nav-link ml-auto" style="text-align:center;">  Logged in as: <%= username %></a>
          <form action="/logout" method="POST" class="login-form">
            <button type="submit" class="custom-button" >Logout</button>
          </form>
        <% } else { %>
          <form action="/login" method="POST" class="login-form">
            <input type="text" name="username" placeholder="username">
            <button type="submit" class="custom-button" >LOGIN</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>

<style>
  .custom-button {
    background-color: transparent;
    border: 2px solid black;
    padding: 8px 10px;
    border-radius: 4px;
    color: black;
    float: right;
  }
  
  .login-form {
    display: flex;
    align-items: center;
  }
  
  .login-form input {
    margin-right: 10px;
  }
</style>
